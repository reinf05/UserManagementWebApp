@model UserManagementWebApp.Models.User
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card-body">
				<h3 id="deleteText" class="text-danger">Are you sure you want to delete this user?</h3>

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Email</th>
							<th>Birthdate</th>
							<th>Registration date</th>
						</tr>
					</thead>

					<tbody id="deleteUserData">
						<tr>
							<td>@Model.Id</td>
							<td>@Model.Name</td>
							<td>@Model.Email</td>
							<td>@Model.BirthDate</td>
							<td>@Model.RegistrationDate</td>
						</tr>
					</tbody>
				</table>

				<div class="text-center">
					<form id="deleteUserForm">
						<input type="submit" class="btn btn-danger btn-warning alert-danger" value="Submit" />
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	const currentId = @Model.Id
</script>

<script src="~/js/delete.js"></script>
